{{#each buttons}}
    {{#if view}}
        <button type="button" class="dialog button_action" data-dialog="{{view}}"
            {{#each dataAttributes}}
                data-{{name}}="{{value}}"
            {{/each}}
            {{#if disabled}}
                disabled="disabled"
            {{/if}}
                >{{text}}</button>
        {{#if helpText}}
            <img class="help" src="/images/more-info.png" data-text="{{helpText}}"/>
        {{/if}}
    {{else}}
        {{#if url}}
            <a class="button button_action" href="{{url}}">{{text}}</a>
        {{/if}}
    {{/if}}
{{/each}}
